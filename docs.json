{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "maple",
  "name": "VisionFly API",
  "colors": {
    "primary": "#6987FF",
    "light": "#4B6FFF",
    "dark": "#4B6FFF"
  },
  "favicon": "/favicon.png",

  "navigation": {
    "groups": [
      {
        "group": "Getting Started",
        "pages": [
          "introduction",
          "quickstart",
          "use-cases",
          "image-transformations"
        ]
      },

      {
        "group": "API Reference",
        "pages": [
          "api/introduction",
          {
            "group": "Upload",
            "pages": ["api/upload"]
          },
          {
            "group": "Transform",
            "pages": ["api/transform"]
          },
          {
            "group": "Responsive",
            "pages": ["api/generate-srcset"]
          }
        ]
      },
      {
        "group": "VisionFly SDK",
        "pages": ["sdk/javascript"]
      },

      {
        "group": "Frequently Asked Questions",
        "pages": ["faq/FAQ"]
      }
    ],

    "global": {
      "anchors": [
        {
          "anchor": "Documentation",
          "href": "https://docs.visionfly.ai",
          "icon": "book-open-cover"
        },
        {
          "anchor": "Blog",
          "href": "https://visionfly.ai/blog",
          "icon": "newspaper"
        }
      ]
    }
  },

  "api": {
    "mdx": {
      "server": "https://api.visionfly.ai",
      "auth": {
        "method": "key",
        "name": "x-api-key"
      }
    }
  },
  "logo": {
    "light": "/logo/logo-no-background.svg",
    "dark": "/logo/logo-no-background.svg",
    "href": "https://visionfly.ai"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:hello@visionfly.ai"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://visionfly.ai/dashboard"
    }
  },
  "footer": {
    "socials": {
      "x": "https://x.com/visionfly",
      "github": "https://github.com/visionfly",
      "linkedin": "https://linkedin.com/company/visionfly"
    }
  }
}
